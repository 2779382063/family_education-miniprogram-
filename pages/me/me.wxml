<view class="root">
  <image class='background-image' src='/image/beijing-1.png' mode="aspectFill"></image>
    <view class="userinfo">
      <!-- 用户头像 -->
      <view class="userinfo-avatar"style='margin-left:140px;'>
        <open-data type='userAvatarUrl'></open-data>
      </view>

      <!-- 用户名称 -->
      <view class="userinfo-NickName"style='center;font-size:12px'>
        <open-data type='userNickName'></open-data>
      </view>
    </view>
</view>


